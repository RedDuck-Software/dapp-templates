{
  "name": "dapp-templates",
  "private": true,
  "workspaces": {
    "packages": [
      "templates/*",
      "packages/*"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "prepare": "run-s prepare:*",
    "prepare:shared": "yarn workspace @templates/shared prepare",
    "prepare:shared-rainbowkit": "yarn workspace @templates/shared-rainbowkit prepare",
    "build": "run-s prepare build:*",
    "build:cra-with-rainbowkit": "yarn workspace @templates/cra-rainbowkit build",
    "build:next-with-rainbowkit": "yarn workspace @templates/next-rainbowkit build",
    "start": "run-p start:*",
    "start:cra-with-rainbowkit": "yarn workspace @templates/cra-rainbowkit start",
    "start:next-with-rainbowkit": "yarn workspace @templates/next-rainbowkit dev"
  },
  "keywords": [],
  "author": "Ilya Kubariev",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4"
  }
}
